<?xml version="1.0" encoding="UTF-8"?>
<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <parameters>
        <parameter key="graviton.document.listener.extreferencelistener.class">Graviton\DocumentBundle\Listener\ExtReferenceListener</parameter>
        <parameter key="graviton.document.validator.constraint_validator.existing_reference.class">Graviton\DocumentBundle\Validator\Constraints\ExistingReferenceValidator</parameter>
    </parameters>
    <services>
        <!-- $ref output in responses -->
        <service id="graviton.document.listener.extreferencelistener" class="%graviton.document.listener.extreferencelistener.class%" scope="request">
             <argument type="service" id="router" />
             <argument>%graviton.document.type.extref.mapping%</argument>
             <argument>%graviton.document.type.extref.fields%</argument>
             <argument type="service" id="request_stack"/>
            <tag name="kernel.event_listener" event="graviton.rest.response" method="onKernelResponse"/>
        </service>
        <service id="graviton.document.validator.constraint_validator.existing_reference" class="%graviton.document.validator.constraint_validator.existing_reference.class%">
            <tag name="validator.constraint_validator" alias="alias_name" />
        </service>
    </services>
</container>
